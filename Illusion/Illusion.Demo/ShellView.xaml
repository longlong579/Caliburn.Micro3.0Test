<Window x:Class="Illusion.Demo.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="MenuRegion"  Grid.Row="0"/>
        <ContentControl x:Name="ToolBarRegion"  Grid.Row="1"/>
        <ContentControl x:Name="DockRegion"  Grid.Row="2">
        </ContentControl>
        <ContentControl x:Name="StatusBarRegion" Grid.Row="3"/>
        <ResizeGrip Grid.Row="3" HorizontalAlignment="Right"/>
    </Grid>
</Window>
